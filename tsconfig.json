{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "target": "esnext",
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./lib",
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"]
}
